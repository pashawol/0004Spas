mixin search()
	+b.searchBlock
		form()
			//-action=""
			input(type="text" placeholder="Поиск")
			button
				+icon('search')


mixin contactBlockGroup(i,t)
	+e.item
		+e.DIV.title
			if i
				+icon(i)
			= t
		block
mixin contactBlock()
	+b.contactBlock
		+contactBlockGroup('tel','телефон')
			a.h6.text-body(href="tel:8(800)100-00-00") 8 (800) 100-00-00
			br
			a.smallest.text-body.ttu(href="#") Заказать звонок
		+contactBlockGroup('email','e-mail')
			a.h6.text-body(href="mailto:info@gmail.com ") info@gmail.com 
		+contactBlockGroup('','мы в соц сетях')
			block

mixin pageHead(img,t)
	+b.pageHead.bg-wrap
		+pic(`${img}`,'bg','',0)(class="picture-bg")
		.container
			h1!= t
			+breadcrumb("Главная", t)