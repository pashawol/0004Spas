mixin sCases()
	// start sCases
	+b.SECTION.sCases.section#sCases&attributes(attributes)
		.container
			+b.section-title
				.row
					.col
						h2 Выполненные работы 
			+e.slider-wrapper
				+e.slider--js.swiper-container
					.swiper-wrapper
						- for (var x = 1; x < 7; x++)
							+e.slide.swiper-slide.bg-wrap(href=`img/@2x/case-${x}.jpg` data-fancybox="cases-gal")
								picture.picture-bg
									source( srcset=`img/@2x/webp/case-${x}.webp` type="image/webp")
									img.object-fit-js.img-bg( src=`img/@2x/case-${x}.jpg`, alt="")
								+e.title Остекление частного дома
				.d-md-none
					+arrow
			+e.btn(href="#") все работы
	// end sCases